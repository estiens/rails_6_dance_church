.card.has-margin-5
  .card-image
    = link_to(show.show_url) do
      - if show.image.attached?
        = image_tag(show.image.variant(resize_to_limit: [800,800]))
      - elsif show.mixcloud_url
        = image_tag(show.mixcloud_image)
  .card-content
    .columns
      .column
        = link_to(show.show_url) do
          .title.is-4
            = show.date
          .subtitle
            = show.dj.name
    %p
      = show.title

